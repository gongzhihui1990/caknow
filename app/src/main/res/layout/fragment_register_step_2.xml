<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:gravity="center">
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimens_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/register_text_21"
        android:text="@string/register_text_21"
        style="@style/big_black_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dimens_18"
        android:id="@+id/register_text_22"
        android:text="@string/register_text_22"
        app:layout_constraintTop_toBottomOf="@id/register_text_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/small_gray_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <com.jkb.vcedittext.VerificationCodeEditText
        android:id="@+id/et_register_code"
        android:layout_marginTop="@dimen/dimens_72"
        android:maxEms="4"
        app:layout_constraintTop_toBottomOf="@id/register_text_22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:textSize="32dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="@dimen/dimens_72"
        android:layout_marginRight="@dimen/dimens_72"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:bottomLineHeight="2dp"
        app:bottomLineNormalColor="@color/colorPrimaryDark"
        app:bottomLineSelectedColor="@color/colorAccent"
        app:figures="4"
        app:selectedBackgroundColor="@color/get_red"
        app:verCodeMargin="@dimen/dimens_20"
        />
   <!--     android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        app:bottomLineHeight="2dp"
        app:bottomLineNormalColor="@color/gravy_light"
        app:bottomLineSelectedColor="@color/colorAccent"
        app:figures="4"
        app:selectedBackgroundColor="@color/colorPrimary_alpha33"
        app:verCodeMargin="10dp" />-->

</android.support.constraint.ConstraintLayout>
